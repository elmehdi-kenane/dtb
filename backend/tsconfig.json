{
	"compilerOptions": {
		"incremental": true,
		"typeRoots": ["./node_modules/@types", "./typings"],
		"target": "es6",
		"module": "commonjs",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"moduleResolution": "node",
		"outDir": "./dist",
		"baseUrl": "./",
		"paths": {
			"*": ["node_modules/*", "src/types/*"]
		}
	},
	"include": ["**/*.ts"],
	"exclude": ["node_modules"]
}
